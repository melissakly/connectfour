<h1 class = "title" style = "color: green; opacity: 0.7;"> ~ <%= @curr_user.name %>'s Profile ~ </h1>

<div id = "container" style = "overflow: hidden; width: 100%;">
  <div class="fun" style = "overflow: hidden; color: green; opacity: 0.7;">

	<%= image_tag(@image, :alt => "rss feed", :class => 'profilepic') %>
	
	<div class = "stats">
		<h3 class = "name"> <%= @curr_user.name %> </h3>
		<hr>  
		Wins: <%= @wins %> </br>
		Loses: <%= @losses %></br>
		W/L Ratio: <%= @ratio %> </br>
		Number of Games Played: <%= @total %>
	</div>

  </div>
</div>