<h2 class = "home-header">

<%= form_tag create_user_path do %>
  <%= label_tag :name, "Your Name here!" %>
  <%= text_area_tag :name %>
  <%= submit_tag "Create user" %>
<% end %>

</h2>

<h3> List of users so far: </h3>
<div class = "users">
<% @users.each do |user| %>
	<h3> <%= link_to user.name, user_path(user: user) %> </h3> 
<% end %>
</div>