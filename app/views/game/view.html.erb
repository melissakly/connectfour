<%= @user1 %> versus: <%= @user2 %> <br />
Status: <%= @status  %> <br /> <br />
<table width="350px" height="100%">
	<% for i in 0..5 %>
	<tr>
		<% for j in 0..6 %>
			<td><div class=<%= @config[@board[i][j]] %>></div></td>
		<% end %>
	</tr>
	<% end %>
</table>
<br/><br/>
<% if @can_move %>
	<%= form_tag play_game_path do %>
	  <%= label_tag :column, "Enter column number (from 0 to 6)" %>
	  <%= text_area_tag :column %><br />
	  <%= hidden_field_tag :game, @game_id %>
	  <%= submit_tag "Play!" %>
	<% end %>
<% else %>
	Awaiting opponent's move!
<% end %>

